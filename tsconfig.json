{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
    "test/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "src/example.ts"
  ]
}
